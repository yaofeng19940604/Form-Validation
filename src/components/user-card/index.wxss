/* 用户头像 */
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: white;

  .avatar {
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
    /* border: 1px #f74c31 solid; */
    overflow: hidden;
    margin: 90rpx auto 10rpx;
  }
  
  .nickname {
    margin-bottom: 20rpx;
  }
  
  .setting {
    position: absolute;
    align-self: flex-start;
    padding: 20rpx;
    font-size: 36rpx;
    color: #999;
  }
}
